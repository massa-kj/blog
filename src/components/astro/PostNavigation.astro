---
import { BASE_URL } from '../../utils/share';
import { generateUrl } from '../../i18n/utils';

interface PostLink {
  slug: string;
  title: string;
};

const { collection, prev, next }: { collection: string, prev?: PostLink; next?: PostLink } = Astro.props;
---

<div class="mt-12 grid grid-cols-2 gap-px rounded-md overflow-hidden">
  <!-- OLDER -->
  <a
    href={prev ? `${BASE_URL}${generateUrl(collection, prev.slug)}` : '#'}
    class={`post-nav-btn group ${
      prev ? 'post-nav-btn-hoverable' : 'cursor-default'
    }`}
  >
    <span class="text-xs">OLDER</span>
    <span class={`mt-1 text-sm font-medium leading-snug break-words ${prev?.title ? 'hoverable-text' : ''}`}>
      {prev?.title || '-'}
    </span>
  </a>

  <!-- NEWER -->
  <a
    href={next ? `${BASE_URL}${generateUrl(collection, next.slug)}` : '#'}
    class={`post-nav-btn group ${
      next ? 'post-nav-btn-hoverable' : 'cursor-default'
    } text-right`}
  >
    <span class="text-xs">NEWER</span>
    <span class={`mt-1 text-sm font-medium leading-snug break-words ${next?.title ? 'hoverable-text' : ''}`}>
      {next?.title || '-'}
    </span>
  </a>
</div>
